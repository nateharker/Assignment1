<!--Common stlying for all of the views!-->

<!DOCTYPE html>

<html lang="en">

<head>
    <meta charset="utf-8" />
    <link rel="icon" href="~/img/idaho.ico">
    <title>Nathan Harker - @ViewBag.Title</title>
    <link href="~/css/main.css" rel="stylesheet" />
</head>

<body>
    <div class="container">
        <header>
            <h1>@ViewBag.Header</h1>
            <a asp-controller="Home" asp-action="Index"><p class="inline button">Home</p></a>
            <a asp-controller="Home" asp-action="AboutMe"><p class="inline button">About Me</p></a>
            <a asp-controller="Home" asp-action="GradeCalc"><p class="inline button">Grade Calcuator</p></a>
        </header>
        <br />

        @RenderBody()

        <br /><br />
        <hr />
        <footer>
            <p>Copyright &copy; Nathan Harker 2020</p>
        </footer>
    </div>

    <script src="~/js/grade-calc.js"></script>
    <script src="~/node_modules/jquery/dist/jquery.min.js"></script>

</body>
</html>