@{
    @*Custom header and title for this page sent to the ViewBags on the common layout*@
    ViewBag.Header = "Calculate Your Grades in IS 413";
    ViewBag.Title = "Grade Calculator";
}

@model Assignment1.Models.GradeCalcModel

<body>
    <h2>Grade Calculator</h2>
    <p class="image-caption">Enter a percent for each grade catgory (i.e. 95 for 95%)</p>
    <form method="post">
        <label for="assignments">Assignments:</label>
        <input id="assignments" type="number" asp-for="assignments" />
        <br />
        <label for="groupProject">Group Project:</label>
        <input id="groupProject" type="number" asp-for="groupProject" />
        <br />
        <label for="quizzes">Quizzes:</label>
        <input id="quizzes" type="number" asp-for="quizzes" />
        <br />
        <label for="exams">Exams:</label>
        <input id="exams" type="number" asp-for="exams" />
        <br />
        <label for="intex">INTEX:</label>
        <input id="intex" type="number" asp-for="intex" />
        <br />
        <br />
        <input type="submit" value="Calculate Grade" id="submitButton" class="button" />
    </form>
    <div class="align-left" asp-validation-summary="All"></div>

    <h3>@ViewBag.PercentGrade</h3>
    <h3>@ViewBag.LetterGrade</h3>

</body>